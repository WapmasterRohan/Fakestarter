<% include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= campaign.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campaigns/<%= campaign._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campaign[name]" value="<%= campaign.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campaign[description]" value="<%= campaign.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campaign[requiredFund]" value="<%= campaign.requiredFund %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campaigns">Go Back</a>
        </div>
    </div>
</div>
<% include("../partials/footer") %>

